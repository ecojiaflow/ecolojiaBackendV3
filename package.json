{
  "name": "ecolojia-backend",
  "version": "0.1.0",
  "private": true,
  "description": "API backend for Ecolojia - Node.js + Express + Prisma",
  "main": "dist/server.js",
  "scripts": {
    "dev": "node dist/server.js",
    "build": "tsc",
    "postbuild": "mkdir dist/data && copy src\\data\\educational-insights-db.json dist\\data\\educational-insights-db.json",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:sprint3": "jest tests/sprint3-validation.test.js --verbose --detectOpenHandles",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose",
    "lint": "echo \"No lint configured\"",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push"
  },
  "keywords": [
    "ecolojia",
    "api",
    "eco-friendly",
    "express",
    "prisma"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "ISC",
  "dependencies": {
    "@google-cloud/vision": "^5.2.0",
    "@prisma/client": "^6.8.2",
    "algoliasearch": "^4.25.0",
    "axios": "^1.10.0",
    "cheerio": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.4",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "multer": "^2.0.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "prisma": "^6.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.14",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "detectOpenHandles": true,
    "forceExit": true
  }
}
